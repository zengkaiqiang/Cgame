<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/space_50">

        <LinearLayout
            android:id="@+id/ll_back"
            android:layout_width="60dp"
            android:layout_height="50dp">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/space_15"
                android:src="@mipmap/login_back" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/userinfo_fens_title"
            android:textColor="@color/common_333333"
            android:textSize="@dimen/space_18" />


    </RelativeLayout>


    <View
        style="@style/divider_line"
        android:id="@+id/line2"
        android:layout_marginTop="@dimen/space_50" />


    <com.temporary.tabs.PagerSlidingTabStrip
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="52dip"
        android:background="@android:color/white"
        app:pstsDividerColor="@android:color/transparent"
        app:pstsIndicatorColor="#FFD331"
        android:layout_below="@id/line2"

        app:pstsIndicatorHeight="@dimen/space_6"
        app:pstsShouldExpand="true"
        app:pstsTabBackground="@drawable/fragment_background_tab"
        app:pstsUnderlineColor="@color/white"
        app:pstsUnderlineHeight="@dimen/space_5"
        app:selectedTabTextColor="@color/common_333333"
        app:xfzIndicatorPadding="@dimen/space_65" />

    <View
        android:id="@+id/line_division"
        android:layout_width="fill_parent"
        android:layout_height="12dp"
        android:layout_below="@id/tabs"
        android:background="#F5F5F5" />

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/line_division"></android.support.v4.view.ViewPager>

</RelativeLayout>
