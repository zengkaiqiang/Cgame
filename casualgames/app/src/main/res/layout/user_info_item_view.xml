<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <!--<LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">-->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/user_header_layout"
            android:layout_width="34dp"
            android:layout_height="34dp">
        <com.weile.casualgames.view.widget.RoundImageView
            android:id="@+id/user_header_imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_default_avatar" />

<FrameLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_alignParentBottom="true">
            <ImageView
                android:id="@+id/authentication_imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                />
</FrameLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/user_header_layout"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                android:id="@+id/nick_name_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_centerVertical="true"
                android:textColor="@color/user_nickname_text_color"
                android:textSize="@dimen/main_body_time"/>
            <ImageView
                android:id="@+id/gender_imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@id/nick_name_textView"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_weight="1"
                android:orientation="horizontal">
  <!--              <ImageView
                    android:id="@+id/localtion_tag_imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/ic_location" />-->
                <TextView
                    android:id="@+id/user_signature_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:textColor="@color/user_signature_text_color"
                    android:textSize="@dimen/text_size_11"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:maxLength="20"/>
            </LinearLayout>

           <!-- 地理位置<LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/localtion_tag_imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/ic_location" />

                <TextView
                    android:id="@+id/location_info_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="3dp"
                    android:gravity="center"
                    android:textColor="@color/main_bottom_string_color"
                    android:textSize="@dimen/main_body_message_unreader" />
            </LinearLayout>-->
        </LinearLayout>

        <TextView
            android:id="@+id/attention_textView"
            android:layout_width="54dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="关注TA"
            android:textColor="@color/game_user_vip_text"
            android:textSize="@dimen/text_size_12"
            android:background="@mipmap/bg_vip"
            />

        <TextView
            android:id="@+id/rank_textView"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:textColor="@color/user_nickname_text_color"
            android:textSize="@dimen/main_body_time"
            android:visibility="gone"
            />

        <ImageView
            android:id="@+id/imgMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@mipmap/ic_mine_more"
            android:visibility="gone"
            />
      <!-- <TextView
            android:id="@+id/create_at_time_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="刚刚"
            android:textColor="@color/main_title_location_text"
            android:textSize="14sp"
            android:visibility="gone"/>-->
    </RelativeLayout>


</RelativeLayout>