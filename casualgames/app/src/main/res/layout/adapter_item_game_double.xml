<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_game_item_bg"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
<ImageView
    android:id="@+id/iv_game_start"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:src="@mipmap/ic_game_start"
    android:background="@drawable/shape_game_double_item_f_bg"
    android:visibility="gone"/>
    <ImageView
        android:id="@+id/iv_game_end"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/ic_game_coming_soon"
        android:background="@drawable/shape_game_double_item_e_bg"
        android:visibility="gone"/>
    <LinearLayout
        android:id="@+id/ll_game"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/shape_game_double_item_a_bg">
    <ImageView
        android:id="@+id/iv_game_background"
        android:layout_width="@dimen/space_119"
        android:layout_height="@dimen/space_119"
        android:focusable="false"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
       android:src="@mipmap/ic_game_double_a"
        android:background="@drawable/shape_game_double_item_a_bg">
    </ImageView>

    <RelativeLayout
        android:id="@+id/rl_game_title_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_46">
        <ImageView
            android:id="@+id/iv_game_title_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_game_double_item_a"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_game_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/game_double_a_title"
            android:textSize="@dimen/text_size_15"
            android:textColor="@color/game_user_vip_text"
            android:layout_marginTop="@dimen/space_4" ></TextView>

        <TextView
            android:id="@+id/tv_game_play_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1246对在玩"
            android:textSize="@dimen/text_size_11"
            android:textColor="@color/game_user_vip_text"
            ></TextView>

    </LinearLayout>
    </RelativeLayout>
</LinearLayout>
</LinearLayout>