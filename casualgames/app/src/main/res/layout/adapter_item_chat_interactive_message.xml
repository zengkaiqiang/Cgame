
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/topic_detail_reply"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_75"
        android:layout_marginLeft="@dimen/space_15"
        android:layout_marginRight="@dimen/space_15"
        android:layout_marginBottom="@dimen/space_10">

        <RelativeLayout
            android:id="@+id/user_header_layout"
            android:layout_width="@dimen/space_48"
            android:layout_height="@dimen/space_48"
           android:layout_marginTop="@dimen/space_15">
            <com.weile.casualgames.view.widget.RoundImageView
                android:id="@+id/iv_user_header"
                android:layout_width="@dimen/space_48"
                android:layout_height="@dimen/space_48"
                android:src="@mipmap/ic_default_avatar"
                android:layout_centerVertical="true"/>
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true">
                <ImageView
                    android:id="@+id/authentication_imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    />
            </FrameLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/reply_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_15"
            android:layout_toRightOf="@+id/user_header_layout"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_15">
                <TextView
                    android:id="@+id/tv_user_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="@color/game_user_name_text"
                    android:textSize="@dimen/text_size_17"
                    android:text="Mark"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_interactive_message_item_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_10"
                android:textSize="@dimen/text_size_14"
                android:textColor="@color/chat_message_content"
                android:text="想说点什么..."
                />

        </LinearLayout>
        <TextView
            android:id="@+id/tv_interactive_message_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/space_15"
            android:textSize="@dimen/text_size_12"
            android:textColor="@color/chat_message_time"
            android:text="下午2：55"
            />
    </RelativeLayout>

    <View
        style="@style/divider_line"
        android:layout_below="@id/topic_detail_reply"
        android:layout_marginLeft="@dimen/space_75"/>

</RelativeLayout>