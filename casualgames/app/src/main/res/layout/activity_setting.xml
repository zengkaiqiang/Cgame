<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/space_50">

        <LinearLayout
            android:id="@+id/ll_back"
            android:layout_width="60dp"
            android:layout_height="50dp">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/space_15"
                android:src="@mipmap/login_back" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/setting_title"
            android:textColor="@color/common_333333"
            android:textSize="@dimen/space_18" />


        <LinearLayout
            android:id="@+id/ll_submit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:visibility="gone">

            <TextView
                android:id="@+id/iv_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/space_15"
                android:text="@string/userinfo_edit_submit"
                android:textColor="@color/common_666666"
                android:textSize="@dimen/space_16" />
        </LinearLayout>
    </RelativeLayout>


    <View
        style="@style/divider_gradient_line"
        android:layout_marginTop="@dimen/space_50" />

    <com.weile.casualgames.view.widget.ReboundScrollview
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_51"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_setting_notice_set"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/space_60"
                android:layout_marginLeft="@dimen/space_15"
                android:layout_marginRight="@dimen/space_15">

                <TextView
                    style="@style/userinfo_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/setting_notice_set" />


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_arrow_right" />
            </RelativeLayout>

            <View
                style="@style/divider_line"
                android:layout_marginLeft="@dimen/space_15" />

            <RelativeLayout
                android:id="@+id/rl_setting_worth_set"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_60"
                android:layout_marginLeft="@dimen/space_15"
                android:layout_marginRight="@dimen/space_15">

                <TextView
                    style="@style/userinfo_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/setting_worth_set" />


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_arrow_right" />
            </RelativeLayout>

            <View
                style="@style/divider_line"
                android:layout_marginLeft="@dimen/space_15" />

            <RelativeLayout
                android:id="@+id/rl_setting_privacy"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_60"

                android:layout_marginLeft="@dimen/space_15"
                android:layout_marginRight="@dimen/space_15">

                <TextView
                    style="@style/userinfo_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/setting_privacy" />


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_arrow_right" />
            </RelativeLayout>

            <View style="@style/divider_space" />

            <RelativeLayout
                android:id="@+id/rl_setting_cache_size"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_60"
                android:layout_marginLeft="@dimen/space_15"
                android:layout_marginRight="@dimen/space_15">

                <TextView
                    style="@style/userinfo_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/setting_wipe_cache" />

                <TextView
                    android:id="@+id/setting_cache_size"
                    style="@style/userinfo_content_text_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/space_15"
                    android:background="@null"
                    android:text="0.26M" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_arrow_right" />
            </RelativeLayout>

            <View style="@style/divider_space" />

            <RelativeLayout
                android:id="@+id/rl_setting_help_advice"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_60"
                android:layout_marginLeft="@dimen/space_15"
                android:layout_marginRight="@dimen/space_15">

                <TextView
                    style="@style/userinfo_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/setting_help_advice" />


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_arrow_right" />
            </RelativeLayout>

            <View
                style="@style/divider_line"
                android:layout_marginLeft="@dimen/space_15" />

            <RelativeLayout
                android:id="@+id/rl_setting_user_protocol"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_60"
                android:layout_marginLeft="@dimen/space_15"
                android:layout_marginRight="@dimen/space_15">

                <TextView
                    style="@style/userinfo_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"

                    android:text="@string/setting_user_protocol" />


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_arrow_right" />
            </RelativeLayout>

            <View
                style="@style/divider_line"
                android:layout_marginLeft="@dimen/space_15" />

            <RelativeLayout
                android:id="@+id/rl_setting_about"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_60"
                android:layout_marginLeft="@dimen/space_15"
                android:layout_marginRight="@dimen/space_15">

                <TextView
                    style="@style/userinfo_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/setting_about" />


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_arrow_right" />
            </RelativeLayout>


            <View style="@style/divider_space" />

            <RelativeLayout

                android:layout_width="fill_parent"
                android:layout_height="@dimen/space_50"
                android:background="@color/white"></RelativeLayout>

            <TextView
                android:id="@+id/tv_setting_exit_logon"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/space_45"
                android:background="@color/common_a850ff"
                android:gravity="center"
                android:text="@string/setting_exit_logon"
                android:textColor="@color/white"
                android:textSize="@dimen/space_17" />

        </LinearLayout>


    </com.weile.casualgames.view.widget.ReboundScrollview>

</FrameLayout>
