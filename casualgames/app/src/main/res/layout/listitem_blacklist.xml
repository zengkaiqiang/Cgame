<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/space_70"
        android:layout_marginLeft="@dimen/space_15"
        android:layout_marginRight="@dimen/space_15">

        <com.weile.casualgames.view.widget.RoundImageView
            android:id="@+id/iv_user_header"
            android:layout_width="@dimen/space_48"
            android:layout_height="@dimen/space_48"

            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:src="@mipmap/face" />

        <TextView
            android:id="@+id/tv_user_name"
            style="@style/userinfo_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/space_58"
            android:text="风中野百合" />


        <Button
            android:id="@+id/btn_blacklist"
            android:layout_width="@dimen/space_60"
            android:layout_height="@dimen/space_28"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/but_blacklist_pressed"
            android:text="拉黑"
            android:textColor="@color/white"
            android:textSize="@dimen/space_14" />

    </RelativeLayout>

    <View
        style="@style/divider_line"
        android:layout_marginLeft="@dimen/space_73" />

</LinearLayout>
