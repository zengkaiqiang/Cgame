<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/space_15">

    <LinearLayout
        android:id="@+id/ll_often_play_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_often_play_1"
            android:layout_width="@dimen/space_60"
            android:layout_height="@dimen/space_60"
            android:src="@mipmap/ic_game_double_a" />

        <TextView
            android:id="@+id/tv_often_play_1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_5"
            android:gravity="center_horizontal"
            android:text="五子棋"
            android:textColor="@color/common_333333"
            android:textSize="@dimen/space_12" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_often_play_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_15"
        android:layout_toRightOf="@id/ll_often_play_1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_often_play_2"
            android:layout_width="@dimen/space_60"
            android:layout_height="@dimen/space_60"
            android:src="@mipmap/ic_game_double_a" />

        <TextView
            android:id="@+id/tv_often_play_2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_5"
            android:gravity="center_horizontal"
            android:text="五子棋"
            android:textColor="@color/common_333333"
            android:textSize="@dimen/space_12" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_often_play_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_15"
        android:layout_toRightOf="@id/ll_often_play_2"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_often_play_3"
            android:layout_width="@dimen/space_60"
            android:layout_height="@dimen/space_60"
            android:src="@mipmap/ic_game_double_a" />

        <TextView
            android:id="@+id/tv_often_play_3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_5"
            android:gravity="center_horizontal"
            android:text="五子棋"
            android:textColor="@color/common_333333"
            android:textSize="@dimen/space_12" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_often_play_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_15"
        android:layout_toRightOf="@id/ll_often_play_3"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_often_play_4"
            android:layout_width="@dimen/space_60"
            android:layout_height="@dimen/space_60"

            android:src="@mipmap/ic_game_double_a" />

        <TextView
            android:id="@+id/tv_often_play_4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_5"
            android:gravity="center_horizontal"
            android:text="五子棋"
            android:textColor="@color/common_333333"
            android:textSize="@dimen/space_12" />
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/ic_arrow_right" />

</RelativeLayout>
