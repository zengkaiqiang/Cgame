<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/space_15">

    <LinearLayout
        android:id="@+id/ll_gift_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_gift_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/userinfo_gift" />

        <TextView
            android:id="@+id/tv_gift_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/space_5"
            android:background="@drawable/shape_gift_num_bg"
            android:gravity="center_horizontal"
            android:paddingLeft="@dimen/space_15"
            android:paddingRight="@dimen/space_15"
            android:text="19"
            android:textColor="@color/common_333333"
            android:textSize="@dimen/space_12" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_gift_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/ll_gift_1"
        android:layout_marginLeft="@dimen/space_15"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_gift_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/userinfo_gift" />

        <TextView
            android:id="@+id/tv_gift_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_5"
            android:background="@drawable/shape_gift_num_bg"
            android:layout_gravity="center"

            android:paddingLeft="@dimen/space_15"
            android:paddingRight="@dimen/space_15"
            android:text="3"
            android:textColor="@color/common_333333"
            android:textSize="@dimen/space_12" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_gift_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/ll_gift_2"
        android:layout_marginLeft="@dimen/space_15"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_gift_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/userinfo_gift"
          />

        <TextView
            android:id="@+id/tv_gift_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_5"
            android:background="@drawable/shape_gift_num_bg"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:paddingLeft="@dimen/space_15"
            android:paddingRight="@dimen/space_15"
            android:text="5"
            android:textColor="@color/common_333333"
            android:textSize="@dimen/space_12" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_gift_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/ll_gift_3"
        android:layout_marginLeft="@dimen/space_15"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_gift_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/userinfo_gift" />

        <TextView
            android:id="@+id/tv_gift_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_5"
            android:background="@drawable/shape_gift_num_bg"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:paddingLeft="@dimen/space_15"
            android:paddingRight="@dimen/space_15"
            android:text="7"
            android:textColor="@color/common_333333"
            android:textSize="@dimen/space_12" />
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/ic_arrow_right" />

</RelativeLayout>
