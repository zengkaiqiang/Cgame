                android:layout_gravity="center_vertical"
                android:background="@drawable/selector_radio_sex"
                android:button="@null"
                android:checked="false" />
        </RelativeLayout>

        <View
            style="@style/divider_line"
            android:layout_marginLeft="@dimen/space_15" />

