    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg_gray">

    <!--<include
        android:id="@+id/home_title"
        layout="@layout/activity_title" />-->

    <RelativeLayout
        android:id="@+id/mine_userinfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@mipmap/ic_rank_bg">


        <com.weile.casualgames.view.widget.RoundImageView
            android:id="@+id/mine_userinfo_img"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_centerVertical="true"
            android:layout_margin="16dp"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_default_avatar"
             />
        <!--app:riv_border_color="@color/grey"-->
        <!--app:riv_border_width="3dip"-->
 <!--       <View
            style="@style/underline_style"
            android:layout_below="@id/mine_userinfo_img"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp" />-->

        <TextView
            android:id="@+id/mine_userinfo_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/mine_userinfo_img"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/mine_userinfo_img"
            android:text="用户名"
            android:textColor="@color/user_nickname_text_color"
            android:textSize="@dimen/text_size_15" />
<LinearLayout
    android:id="@+id/llUserInfo"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_alignLeft="@id/mine_userinfo_nickname"
    android:layout_below="@id/mine_userinfo_nickname"
    android:layout_gravity="center"
    android:layout_marginTop="8dp">
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@mipmap/ic_find_phone"
        android:layout_marginTop="2dp"
        android:gravity="center"/>
        <TextView
            android:id="@+id/mine_userinfo_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/main_bg_gray"
            android:textSize="14sp"
            android:text="1359 热币"
            android:gravity="center"/>
</LinearLayout>
       <!-- <ImageView style="@style/Right_Arrow_Style" />-->

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlMyIncome"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@id/mine_userinfo"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@mipmap/ic_rank_bg"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerInParent="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/user_nickname_text_color"
            android:text="我的收益: "
            android:layout_centerInParent="true"></TextView>
        <TextView
            android:id="@+id/tvMyIncomeValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color_gray"
            android:textSize="14sp"
            android:layout_centerInParent="true">
        </TextView>
        </LinearLayout>
    </RelativeLayout>

    <GridView
        android:id="@+id/mine_gridview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rlMyIncome"
        android:layout_margin="12dp"
        android:gravity="center"
        android:horizontalSpacing="12dp"
        android:listSelector="@android:color/transparent"
        android:numColumns="3"
        android:scrollbars="none"
        android:stretchMode="columnWidth"
        android:verticalSpacing="12dp"
        />


    <Button
        android:id="@+id/btn_logout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="30dp"
        android:layout_below="@id/mine_gridview"
        android:background="@drawable/selector_attent_bottom"
        android:text="安全退出"
        android:textColor="@color/white"
        android:textSize="16sp" />
</RelativeLayout>
   <!-- </ScrollView>-->