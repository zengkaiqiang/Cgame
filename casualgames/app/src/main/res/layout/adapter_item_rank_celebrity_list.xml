<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/rl_player_header"
        android:layout_width="@dimen/space_125"
        android:layout_height="@dimen/space_125">

    <ImageView
        android:id="@+id/iv_user_header"
        android:layout_width="@dimen/space_125"
        android:layout_height="@dimen/space_125"
        android:src="@mipmap/ic_rank_first_photo"
        android:scaleType="centerCrop"/>
        <TextView
            android:id="@+id/tv_play_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerHorizontal="true"
            android:text="03/26"
            android:textColor="@color/game_user_vip_text"
            android:textSize="@dimen/text_size_12"
            android:background="@mipmap/bg_rank_celebrity_list_flower"
            android:textAlignment="center"></TextView>

            <TextView
                android:id="@+id/tv_player_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/space_5"
                android:text="仙女本仙"
                android:textColor="@color/game_user_vip_text"
                android:textSize="@dimen/text_size_14"/>

    </RelativeLayout>
