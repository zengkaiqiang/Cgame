<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/space_15">

    <FrameLayout
        android:id="@+id/ll_game_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_game_1"
            android:layout_width="@dimen/space_60"
            android:layout_height="@dimen/space_60"

            android:src="@mipmap/ic_game_double_a" />

        <TextView
            android:id="@+id/tv_game_people_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/space_43"
            android:background="@mipmap/userinfo_bg_kitchen_people"
            android:gravity="center"
            android:paddingLeft="@dimen/space_3"
            android:text="18人"
            android:textColor="@color/white"
            android:textSize="@dimen/space_12"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_game_name_1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_65"
            android:gravity="center_horizontal"
            android:text="游戏伴侣"
            android:textColor="@color/common_333333"
            android:textSize="@dimen/space_12" />

        <TextView
            android:id="@+id/tv_game_content_1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_86"
            android:gravity="center_horizontal"
            android:text="王明明"
            android:textColor="@color/common_7a5ca4"
            android:textSize="@dimen/space_12" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/ll_game_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_15"
        android:layout_toRightOf="@id/ll_game_1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_game_2"
            android:layout_width="@dimen/space_60"
            android:layout_height="@dimen/space_60"

            android:src="@mipmap/ic_game_double_a" />

        <TextView
            android:id="@+id/tv_game_people_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/space_43"
            android:background="@mipmap/userinfo_bg_kitchen_people"
            android:gravity="center"
            android:paddingLeft="@dimen/space_3"
            android:text="18人"
            android:textColor="@color/white"
            android:textSize="@dimen/space_12" />


        <TextView
            android:id="@+id/tv_game_name_2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_65"
            android:gravity="center_horizontal"
            android:text="厨师长"
            android:textColor="@color/common_333333"
            android:textSize="@dimen/space_12" />

        <TextView
            android:id="@+id/tv_game_content_2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_86"
            android:gravity="center_horizontal"
            android:text="LINDA"
            android:textColor="@color/common_7a5ca4"
            android:textSize="@dimen/space_12" />
    </FrameLayout>
</RelativeLayout>
