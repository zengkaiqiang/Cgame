<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_back"
        android:layout_width="60dp"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/space_15"
            android:src="@mipmap/login_back" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/space_15"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login_v_code_2"
                android:textColor="@color/common_999999"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:id="@+id/tv_send_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15032345678"
                android:textColor="@color/common_9d55fe"
                android:textSize="@dimen/text_size_14" />
        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_45"
            android:gravity="center"
            android:text="@string/login_v_code"
            android:textColor="@color/text_color_login_phone"
            android:textSize="@dimen/text_size_19" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/space_30">

            <EditText
                android:id="@+id/et_code1"
                android:layout_width="@dimen/space_40"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@null"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:singleLine="true"
                android:textColor="@color/common_333333"
                android:textSize="@dimen/space_25" />

            <EditText
                android:id="@+id/et_code2"
                android:layout_width="@dimen/space_40"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@id/et_code1"
                android:background="@null"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/common_333333"
                android:textSize="@dimen/space_25" />

            <EditText
                android:id="@+id/et_code3"
                android:layout_width="@dimen/space_40"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@id/et_code2"
                android:background="@null"
                android:gravity="center_horizontal"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/common_333333"
                android:textSize="@dimen/space_25" />

            <EditText
                android:id="@+id/et_code4"
                android:layout_width="@dimen/space_40"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/et_code3"
                android:background="@null"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"

                android:textColor="@color/common_333333"
                android:textSize="@dimen/space_25" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/space_10"
            >

            <View
                android:id="@+id/view_line1"
                android:layout_width="@dimen/space_40"
                android:layout_height="@dimen/space_1"
                android:layout_marginRight="10dp"
                android:background="@color/divider_line_color"
                 />
            <View
                android:id="@+id/view_line2"
                android:layout_width="@dimen/space_40"
                android:layout_height="@dimen/space_1"
                android:layout_toRightOf="@id/view_line1"
                android:layout_marginRight="10dp"
                android:background="@color/divider_line_color"
                />
            <View
                android:id="@+id/view_line3"
                android:layout_width="@dimen/space_40"
                android:layout_height="@dimen/space_1"
                android:layout_toRightOf="@id/view_line2"
                android:layout_marginRight="10dp"
                android:background="@color/divider_line_color"
                />
            <View
                android:id="@+id/view_line4"
                android:layout_width="@dimen/space_40"
                android:layout_height="@dimen/space_1"
                android:layout_toRightOf="@id/view_line3"
                android:background="@color/divider_line_color"
                />


        </RelativeLayout>

        <com.weile.casualgames.login.view.VerificationCodeView
            android:id="@+id/icv"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="26dp"
            app:icv_et_bg_focus="@drawable/shape_icv_et_bg_focus"
            app:icv_et_bg_normal="@drawable/shape_icv_et_bg_normal"
            app:icv_et_divider_drawable="@drawable/shape_divider_identifying"
            app:icv_et_number="4"
            app:icv_et_text_color="#333333"
            app:icv_et_text_size="@dimen/space_25"
            app:icv_et_width="40dp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_30"
            android:gravity="center"
            android:text="@string/login_password"
            android:textColor="@color/common_666666"
            android:textSize="@dimen/text_size_19" />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="@dimen/space_190"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_25"
            android:background="@null"
            android:gravity="center"
            android:inputType="textPassword"
            android:password="true"
            android:textColor="@color/common_333333"
            android:textSize="@dimen/space_25" />

        <View
            style="@style/divider_line"
            android:layout_marginLeft="@dimen/space_100"
            android:layout_marginRight="@dimen/space_100"
            android:layout_marginTop="@dimen/space_10" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/space_10"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_repeat_v_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login_v_code_3"
                android:textColor="@color/common_999999"
                android:textSize="@dimen/text_size_12" />

        </LinearLayout>

        <com.weile.casualgames.view.widget.ThumbnailView
            android:id="@+id/iv_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_40"
            android:src="@mipmap/login_next_normal" />
    </LinearLayout>
</FrameLayout>
