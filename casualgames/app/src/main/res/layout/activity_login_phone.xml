<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/ll_back"
        android:layout_width="60dp"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/space_15"
            android:src="@mipmap/login_back" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_login_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_75"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/login_phone"
            android:textColor="@color/text_color_login_phone"
            android:textSize="@dimen/text_size_19" />

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="@dimen/space_160"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_30"
            android:background="@null"
            android:inputType="phone"
            android:maxLength="11"
            android:textColor="@color/common_333333"
            android:textSize="@dimen/space_25" />

        <View
            style="@style/divider_line"
            android:layout_marginLeft="@dimen/space_100"
            android:layout_marginRight="@dimen/space_100"
            android:layout_marginTop="@dimen/space_10" />

        <com.weile.casualgames.view.widget.ThumbnailView
            android:id="@+id/iv_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_40"
            android:enabled="false"
            android:src="@mipmap/login_next_normal" />
    </LinearLayout>
</FrameLayout>
